@code {
    private string CouponCode { get; set; } = "";
    private string ButtonLabel { get; set; } = "➡️"; // Right arrow emoji
    private bool IsProcessing { get; set; } = false;

    private async Task ValidateCouponCodeAsync()
    {
        if (string.IsNullOrWhiteSpace(CouponCode))
            return;

        IsProcessing = true;
        ButtonLabel = "⏳"; // Waiting icon
        await Task.Delay(2000); // Simulate API call delay

        // Simulate random coupon validation result
        ButtonLabel = new Random().Next(2) == 0 ? "✅" : "🚫";

        IsProcessing = false;
    }

    private bool IsInputEmpty => string.IsNullOrWhiteSpace(CouponCode);

    private void ClearCouponCode()
    {
        CouponCode = "";
        ButtonLabel = "➡️"; // Reset to right arrow emoji
    }

    private void OnInputChanged(ChangeEventArgs e)
    {
        CouponCode = e.Value?.ToString() ?? "";

        if (!IsProcessing)
            ButtonLabel = "➡️"; // Reset to right arrow emoji if not processing

        StateHasChanged(); // Invoke re-rendering
    }
}

<script>
    function validateInput(event) {
        var char = event.key;

        // Check if the character is NOT alphanumeric
        if (!char.match(/^[0-9a-zA-Z]+$/)) {
            // Prevent the default action (i.e., the character being entered into the input)
            event.preventDefault();
        }
    }

    function handlePaste(event) {
        // Prevent the default paste action
        event.preventDefault();

        // Get the text from the clipboard
        const pastedText = (event.clipboardData || window.clipboardData).getData('text');

        // Check if the text is alphanumeric (using a regular expression)
        if (/^[a-z0-9]+$/i.test(pastedText)) {
            // If the text is alphanumeric, insert it at the caret position
            insertAtCaret(event.target, pastedText);
        }
        // If the text is not alphanumeric, do nothing (pasting is prevented)
    }
    function insertAtCaret(input, textToInsert) {
        // Get the current caret position
        const startPos = input.selectionStart;
        const endPos = input.selectionEnd;

        // Insert the text at the caret position
        input.value = input.value.substring(0, startPos) + textToInsert + input.value.substring(endPos);

        // Move the caret to the end of the inserted text
        input.selectionStart = input.selectionEnd = startPos + textToInsert.length;
    }
</script>

<div class="coupon-input-container">
    <div class="input-wrapper">
        <span class="coupon-label">🏷️</span>
        <input type="text"
               id="couponBox"
               value="@CouponCode"
               @oninput="OnInputChanged"
               onpaste="handlePaste(event)"
               onkeypress="validateInput(event)"
               placeholder="Apply Coupon"
               readonly="@IsProcessing" />
        <button @onclick="ClearCouponCode"
                disabled="@IsInputEmpty"
                class="clear-button">
            ❌
        </button>
        <button @onclick="ValidateCouponCodeAsync"
                disabled="@IsInputEmpty"
                class="validate-button">
            @ButtonLabel
        </button>
    </div>
</div>

